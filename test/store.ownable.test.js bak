store
const Store = artifacts.require("Store");

contract('Store Ownable js tests', async (accounts) => {

  const marketplaceOwner = accounts[0];
  const storeOwner = accounts[1];
  const alice = accounts[2];
  const bob = accounts[3];

  let tryCatch = require("./exceptions.js").tryCatch;
  let errTypes = require("./exceptions.js").errTypes;

  beforeEach('deploy contract for each test', async function () {
    store = await Store.deployed();
  })

  it("a user must not be able to transfer ownership", async () => {
    await tryCatch(store.transferOwnership(alice, {from: alice}), errTypes.revert);
  })

  it("owner must be able to transfer ownerships", async () => {
    await store.transferOwnership(alice, {from: storeOwner});
    //assert.equal(await store.productIsForSale(0, {from: alice }), true);
  })

  it("former owner must not be able to transfer ownership", async () => {
    await tryCatch(store.transferOwnership(storeOwner, {from: storeOwner}), errTypes.revert);
  })
/*
  it("former owner must not be able to perform call/transaction", async () => {
        await tryCatch(store.productIsForSale(0, {from: storeOwner }), errTypes.revert);
  })
*/
  /*
    it("owner must be able to perform call/transaction", async () => {
       const value = await store.addProduct ("Yellow Bike", 10, "A nice Yellow Bike", 1, {from: owner });
       assert.equal(await store.productIsForSale(0, {from: owner }), true);
    })

    it("a user must not be able to perform call/transaction", async () => {
      await tryCatch(store.productIsForSale(0, {from: alice }), errTypes.revert);
    })
  */

/*
  it("new owner must be able to perform call/transaction", async () => {
     assert.equal(await store.productIsForSale(0, {from: alice }), true);
  })
*/

})
